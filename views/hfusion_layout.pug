        .page 
            .page-main

                //- Nav Bar Header
                include fusion-system/_header.pug

                //- Horizontal Menu
                if(!isPatient)
                    include fusion-system/_horizontal-menu.pug
                
                //- Sidebar Menu
                if(isPatient)
                    include fusion-system/_sidebar-menu.pug

                //- Header Submenu
                include fusion-system/_header-submenu.pug
                
                //- App Conent 
                //- For Full Width (.container.content-area)
                //- For Side bar (.app-content.my-3.my-md-5.toggle-content)

                //- If Not Patient Change The Container Style
                if(!isPatient)
                    .container.content-area
                        .side-app 
                            p
                            .row 
                                .col-md-12 
                                    block content
                                
                    //- Right-sidebar
                    include fusion-system/_right-sidebar.pug

                    
                //- If Not Patient Change The Container Style
                if(isPatient)
                    .app-content.my-3.my-md-5.toggle-content
                        .side-app 
                            p
                            .row
                                .col-md-12
                                    block content


                    //- Right-sidebar
                    include fusion-system/_right-sidebar.pug


