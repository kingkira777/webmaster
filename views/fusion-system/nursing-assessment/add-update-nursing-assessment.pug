extends ../../hfusion_layout

block content    
    .card 
        .card-header
            h4.card-title
                i.fa.fa-plus 
                | Add/Update Nursing Assessment
            .card-options 
                .card-options 
                        a(href="/patient/nursing-assessment/"+patientinfo[0].patient_no).btn.btn-secondary.btn-sm
                            i.fa.fa-list 
                            | Nursing Assessment List

        .card-body
            form(action="/patient/nursing-assessment/"+patientinfo[0].patient_no+"/save-update-nursing-assessment" method="post")
                
        
                .row.bg-info
                    .col-sm-3 
                        label(for="enteredby") Entered By 
                        input.ipt-sm(type="text" name="enteredby")
                    .col-sm-3
                        label(for="staff") Staff Assign 
                        select.ipt-sm.select2(name="staff")
                            option(value="") Select-->
                    .col-sm-3
                        label(for="discipline") Discipline  
                        select.ipt-sm.select2(name="discipline")
                            option(value="") Select-->
                .row.bg-info
                    .col-sm-3 
                        label(for="typeof") Type Of 
                        select.ipt-sm(name="typeof")
                            option(value="") Select-->
                            option(value="inperson") In-Person 
                            option(value="Telephone") Telephone 

                    .col-sm-3
                        label(for="visit") Visit 
                        select.ipt-sm(name="visit")
                            option(value="") Select-->
                            option(value="scheduled") Scheduled 
                            option(value="unscheduled") Unscheduled 
                            option(value="prn") PRN 
                    .col-sm-3
                        label(for="specify") Specify 
                        input(type="text" name="specify").ipt-sm
                    .col-sm-3
                        label(for="reasonforas") Reason For Assessment 
                        select.ipt-sm(name="reasonforas")
                            option(value="") Select--> 
                            option(value="update") Update 
                            option(value="recert") Re-Cert 
                .row.bg-info
                    .col-sm-2 
                        label(for="visitdate") Visit Date
                        input(type="text" name="visitdate").fc-datepicker.ipt-sm
                    .col-sm-2
                        label(for="timein") Time In
                        input(type="text" name="timein").ipt-sm.timeFormat
                    .col-sm-2
                        label(for="timeout") Time Out
                        input(type="text" name="timeout").ipt-sm.timeFormat
                    .col-sm-2
                        label(for="duration") Duration 
                        input(type="text" name="duration" disabled).ipt-sm
                
                br  
                //- PAIN SCREENING=============================================
                .expanel.expanel-default   
                    .expanel-heading.clearfix 
                        | Pain Screening 
                        .float-right 
                            button.btn.btn-sm.btn-info.collapsed(type='button', data-toggle='collapse', data-target='#painPanel', aria-expanded='false', aria-controls='collapse06')
                                i.fa.fa-bars

                    .expanel-body.collapse#painPanel
                        p 
                            | Is the patient alert, oriented and able to verbalize pain? 
                            label(for="pain")
                                input(type="radio" name="pain")
                                |   Yes
                            | 
                            label(for="pain")
                                input(type="radio" name="pain") 
                                |   No

                        p 
                            | Is patient uncomfortable because of pain? 
                            label(for="pain1")
                                input(type="radio" name="pain1")
                                |   Yes 
                            | 
                            label(for="pain1")
                                input(type="radio" name="pain1")
                                |   No    
                            | 
                            label(for="pain1")
                                input(type="radio" name="pain1")
                                |   Unwilling 
                            |   
                            label(for="pain1")
                                input(type="radio" name="pain1")
                                |   Unable    
                            | 
                            a(href="#")
                                |   OPEN PAIN ASSESSMENT
                        
                        p
                            u Answer applicable question on Pain Assessment, even if no pain reported. (Required for HIS)

                        




                //- VITALS & MEASUREMENTS======================================
