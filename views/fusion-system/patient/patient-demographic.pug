        .col-sm-8
            .card
                .card-header
                    h3.card-title Demographic
                form#updatePatientInfoForm(action="/patient/update-patient-info/"+ patientinfo[0].patient_no method="post")        
                    .card-body
                        .row
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='mrno') MR#
                                    input.form-control(type='text', name="mrno" value=(patientinfo)? patientinfo[0].patient_mrno : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='ssn') SSN
                                    input.form-control#ssnMask(type='text', name="ssn" value=(patientinfo)? patientinfo[0].patient_ssn : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='dob') DOB
                                    input.form-control.fc-datepicker(type='text', name="dob" value=(patientinfo)? patientinfo[0].patient_dob : '')

                        .row
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='lastname') Last Name
                                    input.form-control(type='text', name="lastname" value=(patientinfo)? patientinfo[0].patient_lastname : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='firstname') First Name
                                    input.form-control(type='text', name="firstname" value=(patientinfo)? patientinfo[0].patient_firstname : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='middlename') Middle Name
                                    input.form-control(type='text', name="middlename" value=(patientinfo)? patientinfo[0].patient_middlename : '')

                        .form-group
                            label(for='address') Address
                            input.form-control(type='text', name="address" value=(patientinfo)? patientinfo[0].patient_address : '')

                        .row 
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='city') City
                                    input.form-control(type='text', name="city" value=(patientinfo)? patientinfo[0].patient_city : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='state') State
                                    input.form-control(type='text', name="state" value=(patientinfo)? patientinfo[0].patient_state : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='zipcode') Zipcode
                                    input#zipMask.form-control(type='text', name="zipcode" value=(patientinfo)? patientinfo[0].patient_zipcode : '')
                        .row 
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='phone') Phone#
                                    input.form-control#phoneMask(type='text', name="phone" value=(patientinfo)? patientinfo[0].patient_phone : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='cellno') Cell#
                                    input.form-control#cellMask(type='text', name="cellno" value=(patientinfo)? patientinfo[0].patient_cellno : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='plang') Prim. Language
                                    input.form-control(type='text', name="plang" value=(patientinfo)? patientinfo[0].patient_primlang : '')
                        .row 
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='race') Race
                                    input.form-control(type='text', name="race" value=(patientinfo)? patientinfo[0].patient_race : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='ethnicity') Ethnicity
                                    input.form-control(type='text', name="ethnicity" value=(patientinfo)? patientinfo[0].patient_ethnicity : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='maritalstatus') Marital Status
                                    input.form-control(type='text', name="maritalstatus" value=(patientinfo)? patientinfo[0].patient_maritalstatus : '')
                        .row 
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='gender') Gender
                                    select.form-control(name="gender")
                                        option(value=(patientinfo)? patientinfo[0].patient_gender : '')=patientinfo[0].patient_gender
                                        option(value="male") Male 
                                        option(value="female") Female
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='religion') Religion
                                    input.form-control(type='text', name="religion" value=(patientinfo)? patientinfo[0].patient_religion : '')
                            .col-lg-4.col-md-12
                                .form-group
                                    label(for='denomination') Denomination
                                    input.form-control(type='text', name="denomination" value=(patientinfo)? patientinfo[0].patient_denomination : '')
                        .row 
                            .col-lg-12.col-sm-12 
                                .form-group 
                                    label(for="specialins") Special Instructions
                                    textarea(name="specialins", rows="5").form-control
                                        =(patientinfo)? patientinfo[0].patient_instructions : ''

                    .card-footer.text-right
                        button(type="submit").btn.btn-primary   
                            i.fa.fa-save 
                            | Update


